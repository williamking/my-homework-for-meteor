template(name="content-page")
	div#content-page
		if $eq profile 'teacher'
			p Author: #{author}
			p Content:
			p #{content}
			form#enscore(method="POST")
				label score:
				input(type="text", name="score")
				button(type="submit") enscore

		else
			form#edit(method="post")
				label content:
				input(type="text", name="content", value="#{content}")
				button(type="submit") Edit